generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  name        String
  phoneNumber String    @unique @map("phone_number")
  Contact     Contact[]
}

model Contact {
  id          String  @id @default(cuid())
  name        String
  phoneNumber String  @unique @map("phone_number")
  image       String?
  email       String?
  uid         String
  user        User    @relation(fields: [uid], references: [id], onDelete: Cascade)
}
